# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development # Set to 'production' in production

# Security (Optional - only needed if running as a public service)
API_KEY=your_api_key_here # Only checked in production mode
CORS_ORIGIN=* # Set to specific domains in production, e.g. https://yourdomain.com,https://app.yourdomain.com

# Documentation Storage
DOCS_STORAGE_PATH=./docs

# GitHub API (for fetching docs from repositories)
# Create a token at https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# Rate Limiting (Optional - only needed if running as a public service)
RATE_LIMIT_ENABLED=false # Set to true to enable rate limiting
RATE_LIMIT_MAX=100 # Maximum requests per window
RATE_LIMIT_WINDOW_MS=60000 # Window in milliseconds (1 minute)

# Logging
LOG_LEVEL=info # Options: debug, info, warn, error